# Copy this to .env and fill in real values. DO NOT COMMIT .env.

# Auth keys
PUBLIC_API_KEYS=pub_example_key
ADMIN_API_KEYS=adm_example_key

# Probe + scheduler
HTTP_TIMEOUT_MS=5000
RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=300
CHECK_INTERVAL_MS=60000
MAX_CONCURRENT_CHECKS=10

# Server + logs
ADDR=:8080
LOG_DIR=/var/log/uptime

# Rate limits
PUBLIC_RPM=300
PUBLIC_BURST=150
ADMIN_RPM=60
ADMIN_BURST=30

# CORS (comma-separated, leave empty for dev)
ALLOWED_ORIGINS=
